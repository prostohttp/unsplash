{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": "./",
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/assets/*"
      ],
      "!/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}